<!DOCTYPE html>
<html>
  <head>
    <title>Proitt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <div class="navbar-brand"><%= link_to 'ホーム', root_path %></div>
          <div class="navbar__search-form">
            <%= render 'search_form' %>
          </div>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navi" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-navi">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <% if current_user then %>
                <%= link_to 'ログアウト', logout_path %>
              <% else %>
                <%= link_to 'ログイン', '/auth/github' %>
              <% end %>
            </li>
            <li><a href="#">nav1</a></li>
            <li><a href="#">nav2</a></li>
            <li><a href="#">nav3</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="flash">
      <% if flash[:notice].present? %>
        <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error].present? %>
        <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
      <% end %>
      <% if flash[:validates].present? %>
        <ul class="alert alert-danger" role="alert">
          <% flash[:validates].each do |message| %>
              <%= content_tag(:li, message) %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="yield">
      <%= yield %>
    </div>
  </body>
</html>
